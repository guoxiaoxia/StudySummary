<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="#eee"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/id_tab_home"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/id_tab_home_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/i_home_in" 
            android:clickable="false"/>

        <TextView
            android:id="@+id/id_tab_home_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="首页" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab_note"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/id_tab_note_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/i_note_out" 
            android:clickable="false"/>

        <TextView
            android:id="@+id/id_tab_note_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="笔记" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab_person"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/id_tab_person_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/i_person_out" 
            android:clickable="false"/>

        <TextView
            android:id="@+id/id_tab_person_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="账户" />
    </LinearLayout>

</LinearLayout>